<main id="main-container" class="front-main-container">


		<div class="project-block">
			<div class="project-titles">

				<% @top_projects.each do |proj| %>
					
					<section class="project-wrap" data-cursor="<%= url_for( proj.cursor ) %>">
						<%= link_to proj do %>
							<div class="project-box" data-position="#topBG" data-poster="<%= url_for(proj.poster_image)  %>">
								<h2 class="project-box-serif"><%= proj.title %></h2>
								<h2 class="project-box-sans"><%= proj.tags %></h2>
							</div>
						<% end %>
					</section>

				<% end %>

			</div>

			<div class="project-image image-pad top-pad">
				<div class="image">
					<div id="topBG" class="show-poster">
					</div>
				</div>
			</div>

		</div>


		<div class="project-block">


			<div class="project-image image-pad mid-pad">
				<div class="image">
					<div id="midBG" class="show-poster"></div>
				</div>
			</div>

			<div class="project-titles">

				<% @mid_projects.each do |proj| %>
					
					<section class="project-wrap" data-cursor="<%= url_for( proj.cursor ) %>">
						<%= link_to proj do %>
							<div class="project-box" data-position="#midBG" data-poster="<%= url_for (proj.poster_image) %>">
								<h2 class="project-box-serif"><%= proj.title %></h2>
								<h2 class="project-box-sans"><%= proj.tags.upcase %></h2>
							</div>
						<% end %>
					</section>

				<% end %>

			</div>
		</div>


		
		<section class="project-wrap full-width-row" data-cursor="<%= url_for( @special_project.cursor ) %>">
			<%= link_to @special_project do %>
				<div class="project-box" data-position="#midBG" data-poster="<%= url_for( @special_project.poster_image ) %>">
					<h2 class="project-box-serif"><%= @special_project.title %></h2>
					<h2 class="project-box-sans"><%= @special_project.tags.upcase %></h2>
				</div>
			<% end %>
		</section>


			
