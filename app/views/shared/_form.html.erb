<%= form_for @project do |f| %>
	<%= f.label :title, 'Project Title' %>
	<%= f.text_field :title %>

	<%= f.label :tags, 'Project Tags' %>
	<%= f.text_field :tags %>

	<%= f.label :description, 'Nice Little Description' %>
	<%= f.text_area :description, :class => "tinymce", size: "60x12" %>

	<%= f.label :cursor, 'Styled Cursor' %>
	<%= f.file_field :cursor %>

	<%= f.label :poster_image, 'Poster Image' %>
	<%= f.file_field :poster_image %>

	<% f.fields_for :images do |img_form| %>
		<%= img_form.label :file, 'Project Images' %>
		<%= img_form.file_field :file, multiple: true %>
	<% end %>

	<%= f.submit "#{action_name.capitalize} Project" %>
<% end %> 

